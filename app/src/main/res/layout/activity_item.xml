<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true"
    tools:context=".ItemActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/ItemNm"
            android:text="Item Name"
            android:textSize="22sp"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/Itemimg"
            android:layout_width="match_parent"
            android:layout_height="271dp"
            android:adjustViewBounds="true"
            android:background="@drawable/loading_image"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/ItemPric"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item Price"
            android:textColor="#000"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/ItemInf"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:text="this will be the info of the item"
            android:textColor="#000"
            android:textSize="20sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/Link1"
                android:layout_width="417dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:clickable="true"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/price_link1"
                android:layout_width="417dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:textSize="20dp"
                android:layout_weight="8"
                android:inputType="textPersonName"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Link2"
                android:layout_width="417dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:clickable="true"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/price_link2"
                android:layout_width="417dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:textSize="20dp"
                android:layout_weight="8"
                android:inputType="textPersonName"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Link3"
                android:layout_width="417dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:clickable="true"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/price_link3"
                android:layout_width="417dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:textSize="20dp"
                android:layout_weight="8"
                android:inputType="textPersonName"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sharebtn"
                android:text="Share"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_action_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/addFavorite"
                android:text="Add to Favorite"
                android:layout_weight="0.5"
                android:drawableLeft="@drawable/ic_action_emptyfavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>